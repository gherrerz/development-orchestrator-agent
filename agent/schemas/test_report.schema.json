{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "TestReport",
  "type": "object",
  "required": ["passed", "summary", "acceptance_criteria_status"],
  "properties": {
    "passed": { "type": "boolean" },
    "summary": { "type": "string" },
    "failure_hints": {
      "type": "array",
      "items": { "type": "string" },
      "default": []
    },
    "acceptance_criteria_status": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["criterion", "met", "evidence"],
        "properties": {
          "criterion": { "type": "string" },
          "met": { "type": "boolean" },
          "evidence": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "recommended_patch": {
      "type": "object",
      "minProperties": 2,
      "required": ["notes"],
      "properties": {
        "notes": {
          "type": "array",
          "items": { "type": "string" },
          "default": []
        },
        "patches": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["path", "diff"],
            "properties": {
              "path": { "type": "string" },
              "diff": { "type": "string", "minLength": 10 }
            },
            "additionalProperties": false
          }
        },
        "files": {
          "type": "object",
          "minProperties": 1,
          "additionalProperties": {
            "oneOf": [
              { "type": "string" },
              {
                "type": "object",
                "required": ["content"],
                "properties": {
                  "operation": {
                    "type": "string",
                    "enum": ["add", "modify", "delete"],
                    "default": "modify"
                  },
                  "content": { "type": "string" }
                },
                "additionalProperties": false
              }
            ]
          }
        }
      },
      "oneOf": [{ "required": ["patches"] }, { "required": ["files"] }],
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
