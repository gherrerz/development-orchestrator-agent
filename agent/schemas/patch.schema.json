{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Patch",
  "type": "object",
  "required": ["notes"],
  "properties": {
    "notes": {
      "type": "array",
      "items": { "type": "string" },
      "default": []
    },

    "files": {
      "type": "object",
      "minProperties": 1,
      "description": "FORMATO RECOMENDADO. Devuelve contenido completo del archivo.",
      "additionalProperties": {
        "oneOf": [
          { "type": "string" },
          {
            "type": "object",
            "required": ["content"],
            "properties": {
              "operation": {
                "type": "string",
                "enum": ["add", "modify", "delete"],
                "default": "modify"
              },
              "content": { "type": "string" }
            },
            "additionalProperties": false
          }
        ]
      }
    },

    "patches": {
      "type": "array",
      "minItems": 1,
      "description": "USAR SOLO si el cambio es trivial (1-2 l√≠neas).",
      "items": {
        "type": "object",
        "required": ["path", "diff"],
        "properties": {
          "path": { "type": "string" },
          "diff": { "type": "string", "minLength": 10 }
        },
        "additionalProperties": false
      }
    }
  },

  "oneOf": [
    { "required": ["files"] },
    { "required": ["patches"] }
  ],

  "additionalProperties": false
}
